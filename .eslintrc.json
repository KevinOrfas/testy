{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "classes": true,
      "modules": true
    },
    "sourceType": "module"
  },
  "globals": {
    "jake": true,
    "desc": true,
    "task": true,
    "complete": true,
    "fail": true,
    "directory": true,
    "describe": true,
    "expect": true,
    "require": true
  },
  "rules": {
    "indent": [
      2,
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": 0,
    "no-var": 1
  }
}
